---
// No props needed
---

<section class="resume-section scroll-reveal-animate">
  <h2>Honors & Awards</h2>

  <div class="award-entry">
    <div class="header">
      <span class="institution"
        ><strong>Merit Student for All-Round Excellence</strong></span
      >
      <span class="date">2014、2017、2021、2023、2024</span>
    </div>
  </div>

  <div class="award-entry">
    <div class="header">
      <span class="institution"><strong>Outstanding Student Leader</strong></span>
      <span class="date">Oct 2024</span>
    </div>
  </div>

  <div class="award-entry">
    <div class="header">
      <span class="institution">Electronic Keyboard Performance Examination: Level 10</span>
      <span class="date">Nov 2017</span>
    </div>
  </div>

<style>
  .resume-section {
    margin-bottom: 4rem;
  }
  h2 {
    font-size: clamp(1.8rem, 1.5rem + 1.5vw, 2.8rem);
    margin-bottom: 2rem;
    font-weight: 600;
    border-bottom: 1px solid var(--text-muted);
    padding-bottom: 0.5rem;
  }
  .award-entry {
    margin-bottom: 1.5rem;
  }
  .award-entry:last-child {
    margin-bottom: 0;
  }
  .award-entry .header {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    font-size: 1.1rem;
    line-height: 1.5;
    align-items: baseline;
  }
  .award-entry .institution {
    margin-right: 1rem;
  }
  .award-entry .date {
    font-family: var(--font-family-sans);
    color: var(--text-muted);
    font-size: 1rem;
    white-space: nowrap;
    padding-left: 1rem;
  }
  @media (max-width: 600px) {
    .award-entry .header {
      flex-direction: column;
      align-items: flex-start;
    }
    .award-entry .date {
      margin-top: 0.3rem;
      padding-left: 0;
    }
  }
</style>
