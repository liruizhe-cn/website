---
// src/components/timeline/TimelineEvent.astro
interface Props {
  date: string; // Represents end date if range exists
  dateRange?: string;
  title: string;
  description?: string;
  category?: string;
  isLast?: boolean; // To prevent line extending past the last item
}

const { date, dateRange, title, description, isLast = false } = Astro.props;
---

<li class:list={["timeline-event", { "is-last": isLast }]}>
  <div class="timeline-marker"></div>
  <div class="timeline-content">
    <div class="timeline-header">
      <span class="timeline-date">{dateRange || date}</span>
      <h3 class="timeline-title">{title}</h3>
    </div>
    {description && <div class="timeline-description" set:html={description} />}
  </div>
</li>
