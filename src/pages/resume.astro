---
import SubPageLayout from "../layouts/SubPageLayout.astro";
import Education from "../components/resume/Education.astro";
import Experience from "../components/resume/Experience.astro";
import Skills from "../components/resume/Skills.astro";
import Awards from "../components/resume/Awards.astro";
import ContactInfo from "../components/resume/ContactInfo.astro";
import Profile from "../components/resume/Profile.astro";
import Projects from "../components/resume/Projects.astro";
import Button from "../components/common/Button.astro";
---

<SubPageLayout title="Résumé">
  <Button
    href="javascript:alert('link to your resume')"
    text="Download Résumé PDF"
    download="resume.pdf"
    icon="↓"
    iconPosition="left"
    target="_blank"
    rel="noopener noreferrer"
    wrapperClass="resume-page-download"
  />
  <div class="resume-columns-wrapper">
    <div class="resume-main-column">
      <Profile />
      <Education />
      <Awards />
      <Experience />
      <Projects />
    </div>
    <div class="resume-sidebar">
      <Skills />
      <ContactInfo />
    </div>
  </div>
</SubPageLayout>

<style>
  .resume-columns-wrapper {
    display: flex;
    flex-direction: row;
    gap: 5vw;
  }
  .resume-main-column {
    flex: 5;
    min-width: 0;
    font-size: 1.1rem;
  }
  .resume-sidebar {
    flex: 2;
    min-width: 0;
    font-size: 1.1rem;
  }
  @media (max-width: 900px) {
    .resume-columns-wrapper {
      flex-direction: column;
      gap: 0;
    }
    .resume-sidebar {
      margin-top: 0;
    }
  }
</style>
