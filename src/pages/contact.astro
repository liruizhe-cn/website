---
import SubPageLayout from "../layouts/SubPageLayout.astro";
import { Icon } from "astro-icon/components";
---

<SubPageLayout title="Contact">
  <div class="contact-content">
    <p class="intro-text">Feel free to reach out!</p>
    <p class="intro-text">Here's some description about how to contact me.</p>

    <h3 class="contact-section-title">Contact Information</h3>
    <p class="section-description">This is a list of my contact information.</p>
    <ul class="contact-list">
      <li>
        <Icon name="ri:mail-line" class="contact-icon" />
        <a href="javascript:alert('link to your email')">example@example.com</a>
      </li>
      <li>
        <Icon name="ri:github-line" class="contact-icon" />
        <a href="javascript:alert('link to your github')">github.com/example</a>
      </li>
      <li>
        <Icon name="ri:planet-line" class="contact-icon" />
        <a href="javascript:alert('link to your website')">example.com</a>
      </li>
    </ul>
  </div>
</SubPageLayout>

<style>
  .contact-content {
    max-width: 600px;
  }

  .intro-text {
    margin-bottom: 1rem;
    font-size: 1.2em;
    line-height: 1.7;
    color: var(--text-muted);
  }

  .contact-section-title {
    font-size: 1.4rem;
    font-weight: 600;
    margin-top: 3rem;
    margin-bottom: 0.5rem;
    color: var(--text-heading-color);
  }

  .section-description {
    font-size: 1.2rem;
    color: var(--text-muted);
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .contact-list {
    list-style: none;
    padding-left: 0;
    margin: 0;
    line-height: 1.9;
  }
  .contact-list li {
    margin-bottom: 1.2rem;
    display: flex;
    align-items: flex-start;
    font-size: 1.1rem;
  }
  .contact-icon {
    margin-right: 1em;
    font-size: 1.3em;
    flex-shrink: 0;
    opacity: 0.9;
    color: var(--icon-color);
    margin-top: 0.3em;
  }

  .contact-list a,
  .contact-list span {
    word-break: break-all;
  }

  .contact-list a {
    color: var(--link-color);
    text-decoration: none;
    transition: color 0.3s ease;
  }
  .contact-list a:hover {
    color: var(--link-hover-color);
    text-decoration: underline;
  }

  .section-divider {
    border: 0;
    height: 1px;
    background: var(--button-border-color);
    margin: 3rem 0;
  }
</style>
